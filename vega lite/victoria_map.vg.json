{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 800,
  "title": "Map of Victoria with Zoom",
  "data": {
    "url": "https://raw.githubusercontent.com/ahilaaa/fit3179/refs/heads/main/data/topojson/victoria.json", 
    "format": {
      "type": "topojson",
      "feature": "suburb-2-vic"
    }
  },
  "params": [
    {
      "name": "zoomLevel",
      "value": 5000,
      "bind": {
        "input": "range",
        "min": 5000,
        "max": 30000,
        "step": 100,
        "name": "zoom"
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "scale": {"expr": "zoomLevel"},
    "center": [144.9631, -37.8136] 
  },
  "mark": {
    "type": "geoshape",
    "stroke": "#7b919c",
    "fill": "#d1e0e8",
    "strokeWidth": 0.5
  },
  "encoding": {
    "tooltip": {"field": "properties.vic_loca_2", "type": "nominal"}
  }
}






