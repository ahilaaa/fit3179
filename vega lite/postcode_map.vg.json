{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 800,
  "title": "Median Income Victoria",
  "projection": { "type": "mercator" },
  "layer": [
    {
      "data": {
        "url": "../data/topojson/victoria.json",
        "format": {
          "type": "topojson",
          "feature": "suburb-2-vic"
        }
      },
      "mark": {
      "type": "geoshape",
      "stroke": "black",
      "fill": "lightgray",
      "strokeWidth": 0.5},
      "encoding": {
        "tooltip": [
          { "field": "properties.vic_loca_2", "type": "nominal", "title": "Suburb" }
        ]
      }
    },
    {
      "data": {
        "url": "../data/topojson/victoria.json",
        "format": {
          "type": "topojson",
          "feature": "suburb-2-vic"
        }
      },
      "transform": [
        {
          "lookup": "properties.vic_loca_2",
          "from": {
            "data": {
              "url": "../data/csv/clean.csv"
            },
            "key": "suburb",
            "fields": ["postcode"]
          }
        }
      ],
      "mark": { "type": "geoshape" },
      "encoding": {
        "color": {
          "field": "postcode",
          "type": "quantitative",
          "scale": { "scheme": "blues" }
        },
        "tooltip": [
          { "field": "properties.vic_loca_2", "type": "nominal", "title": "Suburb" },
          { "field": "postcode", "type": "quantitative", "title": "Median Income" }
        ]
      }
    }
  ]
}