{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 500,
  "title": "Adults Obesity Rate in Victoria",
  "params": [
    {
      "name": "obesity_rate_range",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 50,
        "step": 1,
        "name": "SELECT Minimum Obesity Rate"
      }
    },
    {
      "name": "zoomLevel",
      "value": 5000,
      "bind": {
        "input": "range",
        "min": 5000,
        "max": 100000,
        "step": 100,
        "name": "SELECT Zoom"
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "scale": {"expr": "zoomLevel"},
    "center": [144.9631, -37.8136]
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ahilaaa/fit3179/refs/heads/main/data/topojson/victoria.json",
        "format": {"type": "topojson", "feature": "suburb-2-vic"}
      },
      "mark": {"type": "geoshape", "stroke": "slategray", "fill": "lightgray", "strokeWidth": 0.3},
      "encoding": {
        "tooltip": [
          {"field": "properties.vic_loca_2", "type": "nominal", "title": "Suburb"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ahilaaa/fit3179/refs/heads/main/data/topojson/victoria.json",
        "format": {"type": "topojson", "feature": "suburb-2-vic"}
      },
      "transform": [
        {
          "lookup": "properties.vic_loca_2",
          "from": {
            "data": {"url": "https://raw.githubusercontent.com/ahilaaa/fit3179/refs/heads/main/data/csv/Obesity/Merged/Obesity%20Council.csv"},
            "key": "suburb",
            "fields": ["Adults - Obesity Rate"]
          }
        },
        {
          "calculate": "toNumber(replace(replace(datum['Adults - Obesity Rate'], ',', ''), '\"', ''))",
          "as": "obesity_rate"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#5c7eab", "strokeWidth": 0.3},
      "encoding": {
        "color": {
          "condition": {
            "test": "datum.obesity_rate >= obesity_rate_range",
            "field": "obesity_rate",
            "type": "quantitative",
            "scale": {
              "domain": [0, 10, 20, 30, 40, 50],
              "range": ["#ffe6f2", "#ffb3d9", "#ff80bf", "#ff4da6", "#ff1a8c", "#b3005e"]
            }
          },
          "value": "lightgray"
        },
        "tooltip": [
          {"field": "properties.vic_loca_2", "type": "nominal", "title": "Suburb"},
          {"field": "obesity_rate", "type": "quantitative", "title": "Adults Obesity Rate"}
        ]
      }
    }
  ]
}

