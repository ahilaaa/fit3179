{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 550,
  "title": "Obesity Rates by Council: Victoria",
  "params": [
    {
      "name": "zoomLevel",
      "value": 15000,
      "bind": {
        "input": "range",
        "min": 4000,
        "max": 100000,
        "step": 100,
        "name": "SELECT Zoom"
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "scale": {"expr": "zoomLevel"},
    "center": [144.9631, -37.9],
    "translate": [315, 300]
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ahilaaa/fit3179/refs/heads/main/data/topojson/victoria.json",
        "format": {"type": "topojson", "feature": "suburb-2-vic"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "strokeWidth": 0.3},
      "encoding": {
        "tooltip": [
          {"field": "properties.vic_loca_2", "type": "nominal", "title": "Suburb"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ahilaaa/fit3179/refs/heads/main/data/topojson/victoria.json",
        "format": {"type": "topojson", "feature": "suburb-2-vic"}
      },
      "transform": [
        {
          "lookup": "properties.vic_loca_2",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ahilaaa/fit3179/refs/heads/main/data/csv/Obesity/Merged/Obesity%20Council%20Suburb.csv"
            },
            "key": "suburb",
            "fields": ["Adults - Obesity - ASR", "council"]
          }
        },
        {
          "calculate": "toNumber(replace(replace(datum['Adults - Obesity - ASR'], ',', ''), '\"', ''))",
          "as": "obesity_rate"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#5c7eab", "strokeWidth": 0.3},
      "encoding": {
        "color": {
          "field": "obesity_rate",
          "type": "quantitative",
          "scale": {
            "domain": [0, 10, 20, 30, 40],
            "range": ["#feebe2", "#fbb4b9", "#f768a1", "#c51b8a", "#4f0a4a"]
          },
          "legend": {
            "title": "Obesity Rate (%)"
          }
        },
        "tooltip": [
          {"field": "properties.vic_loca_2", "type": "nominal", "title": "Suburb"},
          {"field": "council", "type": "nominal", "title": "Council"},
          {"field": "obesity_rate", "type": "quantitative", "title": "Obesity Rate (%)"}
        ]
      }
    }
  ]
}


