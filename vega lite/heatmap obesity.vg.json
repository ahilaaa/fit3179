{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
            "text": "Obesity and Overweight+Obesity Rates (%) vs Fast Food Location Density",
            "anchor": "start",  
            "dx": 0              
        },
    "width": "container",
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/ahilaaa/fit3179/refs/heads/main/data/csv/FastFood/Merged/Council%20Obesity%20FastFood.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "calculate": "datum[rate_selection]",
        "as": "Selected Rate"
      },
      {
        "calculate": "datum[fast_food_selection]",
        "as": "Selected Fast Food Count"
      }
    ],
    "params": [
      {
        "name": "rate_selection",
        "value": "Adults - Obesity - ASR",
        "bind": {
          "input": "select",
          "options": [
            "Adults - Obesity - ASR",
            "Adults - Overweight/Obese - ASR"
          ],
          "labels": [
            "Obesity Rate",
            "Overweight + Obesity Rate"
          ],
          "name": "SELECT Category: "
        }
      },
      {
        "name": "fast_food_selection",
        "value": "McDonald's Count",
        "bind": {
          "input": "select",
          "options": [
            "Total Fast Food Count",
            "McDonald's Count",
            "Hungry Jack's Count",
            "KFC Count"
          ],
          "labels": [
            "All",
            "McDonald's",
            "Hungry Jack's",
            "KFC"
          ],
          "name": "SELECT Fast Food Chain: "
        }
      }
    ],
    "mark": "rect",
    "encoding": {
      "x": {
        "bin": true,
        "field": "Selected Fast Food Count",
        "type": "quantitative",
        "axis": {
            "title": "No. Fast Food Locations",
            "tickMinStep": 1
        }
      },
      "y": {
        "bin": true,
        "field": "Selected Rate",
        "type": "quantitative",
        "axis": {"title": "Rate (%)"}    
      },
      "color": {
        "field": "Selected Rate",
        "type": "quantitative",
        "aggregate": "mean",
        "scale": {
          "scheme": {
            "expr": "fast_food_selection == 'Total Fast Food Count' ? 'purples' : fast_food_selection == \"McDonald's Count\" ? 'yelloworangebrown' : fast_food_selection == \"Hungry Jack's Count\" ? 'oranges' : 'reds'"
          }
        },
        "legend": {"title": "Rate (%)"}
      },
      "tooltip": [
        {
          "field": "council",
          "type": "nominal",
          "title": "Council"
        },
        {
          "field": "Selected Rate",
          "type": "quantitative",
          "title": "Obesity / Overweight+Obesity Rate (%)"
        },
        {
          "field": "Selected Fast Food Count",
          "type": "quantitative",
          "title": "Total Fast Food Locations"
        }
      ]
    },
    "config": {
      "view": {"stroke": "transparent"},
      "axis": {"grid": false}
    }
  }
  